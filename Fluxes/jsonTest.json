            "next": "userName"
          }
        ],
        "dynamicOptions":{
          "url":"https://93f139810f42447181b999beed1be7e7.api.mockbin.io/",
          "isRecursive": false
        }
      },
      "userName":{
        "type": "inputForm",
        "id": "userName",
        "message": "Por favor, digite seu nome:",
        "field": "name",
        "next": "userCpf"
      },
      "conditional": {
        "type":"conditional",
        "id": "conditional",
        "field": "name",
        "condition": "equals",
        "param": "empresa",
        "true": "welcome",
        "false": "error"
      },
      "userCnpj":{
        "type": "inputForm",
        "id": "userCnpj",
        "message": "Por favor, digite seu cnpj (Apenas numeros):",
        "field": "cnpj",
        "next": "userIndustry",
        "inputValidation":"cnpjValidation"
      },
      "userCpf":{
        "type": "inputForm",
        "id": "userCpf",
        "message": "Por favor, digite seu cpf (Apenas numeros):",
        "field": "cpf",
        "next": "userCnpj",
        "inputValidation":"cpfValidation"
      },
      "userIndustry":{
        "type": "inputForm",
        "id": "userIndustry",
        "message": "Por favor, digite o nome da empresa.",
        "field": "industry",
        "next": "conditional"
      },
      "error": {
        "type":"iterationMenu",
        "id": "error",
        "message": "Ocorreu um erro inesperado. Por favor, tente novamente.",
        "options": [
          {
            "text": "Tentar novamente",
            "next": "welcome"
          }
        ],
